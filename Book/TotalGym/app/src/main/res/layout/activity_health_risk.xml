<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Health_risk">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logoId"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Are you at risk of any of the Following?"
        android:textStyle="bold"
        android:id="@+id/titile"
        android:textSize="20dp"
        android:layout_below="@+id/logoId"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radio_group"
        android:layout_below="@+id/titile"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp">
        <RadioButton android:id="@+id/radio_testoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testosterone deficiency"
            />
        <RadioButton android:id="@+id/radio_high_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Blood Pressure"/>
        <RadioButton android:id="@+id/radio_diabetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diabetes"/>
        <RadioButton android:id="@+id/radio_high_cholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Cholesterol"/>
        <RadioButton android:id="@+id/radio_depression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depression"/>
        <RadioButton android:id="@+id/radio_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"/>
        <RadioButton android:id="@+id/radio_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radio_group"
        android:paddingEnd="20dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/id_back"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/id_next"
            />
    </LinearLayout>


</RelativeLayout>