<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BookActivity"
    tools:showIn="@layout/activity_book">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to wish list"
            android:id="@+id/idWishButton"
            android:layout_centerHorizontal="true"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already read"
            android:layout_below="@id/idWishButton"
            android:id="@+id/idAlreadyButton"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_idBookName"
            android:text="Book Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/idAlreadyButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/_idAuthor"
            android:text="Author"
            android:layout_below="@+id/_idBookName"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginLeft="50dp" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_below="@id/_idAuthor"
            android:id="@+id/_idBookIma"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/_idBookIma"
            android:text="Description"
            android:id="@+id/_idDescription"/>

    </RelativeLayout>
</RelativeLayout>